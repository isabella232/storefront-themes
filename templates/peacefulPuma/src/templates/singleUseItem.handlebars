{{#if odd}}
    <img src="{{imgFilePath}}" class="item-image">
    <div class="content">
        <div class="item-name font-face-1">{{name}}</div>
        <div class="item-description font-face-1">{{description}}</div>
	    <div class="balance-container font-face-1">
			<span class="balance-label">You have: </span>
            <span class="balance">{{balance}}</span>
	    </div>
    </div>
{{else}}
    <div class="content">
        <div class="item-name font-face-1">{{name}}</div>
        <div class="item-description font-face-1">{{description}}</div>
        <div class="balance-container font-face-1">
            <span class="balance-label">You have: </span>
            <span class="balance">{{balance}}</span>
        </div>
    </div>
    <img src="{{imgFilePath}}" class="item-image">
{{/if}}

<label class="item-price font-face-2">${{price}}</label>
