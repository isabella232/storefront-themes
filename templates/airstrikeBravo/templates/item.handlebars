<div class="row">
    {{#if balance}}
    <img src="{{images.equippedIndicatorImage}}" class="equipped">
    {{else}}
    <img src="{{images.notEquippedIndicatorImage}}" class="not-equipped">
    {{/if}}
    <img src="{{imgFilePath}}" class="item-image">
    <div class="content">
        <h1 style="{{item.nameStyle}}">{{name}}</h1>
    </div>
    <div class="actions">
	    {{#if balance}}
		    {{#if equipped}}
			    <img src="{{images.equipEquipped}}" class="toggle-equip">
                <img src="{{images.expandImage}}" class="expand-collapse">
		    {{else}}
                <img src="{{images.equipEquip}}" class="toggle-equip">
                <img src="{{images.expandImage}}" class="expand-collapse">
		    {{/if}}
	    {{else}}
            <div class="price" style="{{item.priceStyle}}">
                <label>{{price}}</label>
                <img src="{{currency.imgFilePath}}">
            </div>
            <img src="{{images.expandImage}}" class="expand-collapse">
	    {{/if}}
    </div>
</div>
<div class="row">
    <div class="description" style="{{item.descriptionStyle}}">{{description}}</div>
	{{#unless balance}}
    <div class="buy-container">
        <a class="buy">
            <img src="{{images.buyImage}}">
        </a>
    </div>
	{{/unless}}
</div>