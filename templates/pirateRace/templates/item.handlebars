<img src="{{imgFilePath}}" class="visual">
<div class="content">
    <div class="row">
        <div class="balance" style="background-image: url('{{balanceBackground}}');">
            <label style="{{balanceLabelStyle}}">{{balance}}</label>
        </div>
        <div class="description">
            <label>{{description}}</label>
        </div>
    </div>
    <div class="row price">
        <img src="{{currency.imgFilePath}}" class="currency">
        <label>{{price}}</label>
        <a class="buy">
            <img src="{{buy}}">
        </a>
        <a class="equip">
            <img src="{{equip}}">
        </a>
        <img class="active" src="{{active}}">
    </div>
</div>
<img src="{{itemSeparator}}" class="separator">