<div class="row">
    <img src="{{imgFilePath}}" class="item-image">
    <div class="content">
        <h1>{{name}}</h1>
	    <span class="balance-label">
		    You have:
	    </span>
        <span class="balance">{{balance}}</span>
    </div>
    <div class="actions">
        <div class="price">
	        <label>{{price}}</label>
	        <img src="{{currency.imgFilePath}}">
	    </div>
        <img src="{{images.expandImage}}" class="expand-collapse">
	</div>
</div>
<div class="row">
    <div class="description">{{description}}</div>
    <div class="buy-container">
        <a class="buy">
            <img src="{{images.buyImage}}">
        </a>
    </div>
</div>