<div class="row">

    <img src="{{images.ownedIndicatorImage}}" class="owned">
    <img src="{{images.notOwnedIndicatorImage}}" class="not-owned">

    <img src="{{imgFilePath}}" class="item-image">
    <div class="content">
        <h1 class="item-name">{{name}}</h1>
    </div>
    <div class="actions">
        <span class="toggle-equip equipped"><img src="{{images.equipped}}"></span>
        <a class="toggle-equip equip"><img src="{{images.equip}}"></a>

	    {{> price}}
        <img src="{{images.expandImage}}" class="expand-collapse">
	</div>
</div>
<div class="row">
    <div class="item-description">{{description}}</div>
    <div class="buy-container">
        <a class="buy">
            <img src="{{images.buyImage}}">
        </a>
    </div>
</div>