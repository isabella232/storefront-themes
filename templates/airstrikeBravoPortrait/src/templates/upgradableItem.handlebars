<div class="row">
    <img src="{{imgFilePath}}" class="item-image">
    <div class="content" style="{{item.nameStyle}}">
        <h1>{{name}}</h1>
        <img class="upgrade-bar" src="{{upgradeBarImage}}">
    </div>
    <div class="actions">
        <div class="price" style="{{item.priceStyle}}">
	        <label>{{price}}</label>
	        <img src="{{currency.imgFilePath}}">
	    </div>
        <img src="{{images.expandImage}}" class="expand-collapse">
	</div>
</div>
<div class="row">
    <div class="description" style="{{item.descriptionStyle}}">{{description}}</div>
    <div class="buy-container">
        <a class="upgrade">
            <img src="{{images.buyImage}}">
        </a>
    </div>
</div>