<div class="row">
    <img src="{{imgFilePath}}" class="item-image">
    <div class="content">
        <h1 class="item-name">{{name}}</h1>
        <img class="upgrade-bar" src="{{upgradeBarImage}}">
    </div>
    <div class="actions">
        <div class="item-price">
	        <label>{{price}}</label>
	        <img src="{{currency.imgFilePath}}">
	    </div>
        <img src="{{images.expandImage}}" class="expand-collapse">
    </div>
	<div class="complete-indicator">
		<label>Fully Upgraded</label>
	</div>
</div>
<div class="row">
    <div class="item-description">{{description}}</div>
    <div class="buy-container">
        <a class="upgrade">
            <img src="{{images.buyImage}}">
        </a>
    </div>
</div>