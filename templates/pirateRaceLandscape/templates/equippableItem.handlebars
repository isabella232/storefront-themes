<div class="content" data-categoryid="{{categoryId}}" style="background-image: url({{imgFilePath}})">
  <div class="row">
    <div class="description">
      <label style="{{descriptionStyle}}">{{description}}</label>
    </div>
  </div>
  <div class="visual"></div>
  <div class="row price">
    <label style="{{priceStyle}}">{{price}}</label>
    <img src="{{currency.imgFilePath}}" class="currency" />
    <a class="buy">
      <img src="{{buyOnce}}" />
    </a>
    <a class="equip">
      <img src="{{equip}}" />
    </a>
    <img class="active" src="{{active}}" />
  </div>
</div>
<img src="{{itemSeparator}}" class="separator" />