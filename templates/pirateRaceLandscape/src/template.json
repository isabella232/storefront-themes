	"validations" : {
		"currency" : {
			"rules" : {
				"name" : {
					"required" : true,
					"matches" : "^[a-zA-Z]",
					"maxlength" : 30
				}
			},
			"messages" : {
				"name" : {
					"required" : "Required",
					"matches" : "Must begin with a letter",
					"maxlength" : "Max. {0} characters"
				}
			}
		},
		"currencyPack" : {
			"rules" : {
				"name" : {
					"required" : true,
					"maxlength" : 10
				},
				"itemId" : {
					"required" : true,
					"matches" : "^[a-zA-Z][a-zA-Z0-9_\\-\\.]*$"
				},
				"productId" : {
					"required" : true,
					"matches" : "^[a-z0-9][a-z0-9_\\.]*$"
				},
				"amount" : {
					"required" : true,
					"number" : true,
					"range" : [1, 999999999]
				},
				"price" : {
					"required" : true,
					"currency" : true
				}
			},
			"messages" : {
				"name" : {
					"required" : "Required",
