<div id="goods-store" data-role="page" style="background-image: url('{{background}}');">


    <div class="content" style="background-image: url('{{contentBackground}}');">
        <div class="header">
            <img class="title-image" src="{{common.titleImage}}">
            <div class="balance-container">
                <img class="balance-image" src="{{common.balanceImage}}" alt="Balance Image">
                <div class="label-container" style="{{balance.style}}">
                    {{#each currencies}}
                    <label>{{this.balance}}</label>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="items-container" style="background-image: url('{{pages.goods.list.background}}');">
        </div>
        <div class="footer">
            <a><img src="{{common.moreCurrencyButton}}" class="currency buy-more"></a>
            <a><img src="{{common.backButton}}" class="leave-store"></a>
        </div>
    </div>
</div>
